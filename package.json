{
	"name": "firelordjs",
	"version": "1.0.8",
	"description": "ðŸ”¥ Extremely High Precision Typescript Wrapper for Firestore Web, Providing Unparalleled Type Safe and Dev Experience",
	"source": "src/index.ts",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"targets": {
		"types": false,
		"main": {
			"optimize": true
		}
	},
	"scripts": {
		"reinstall": "rm -rf node_modules/ && rm package-lock.json && npm i && npx husky install",
		"lint": "eslint . --ext .ts --fix",
		"watch": "jest --watch",
		"tsc": "tsc",
		"test": "rm -rf coverage && jest --forceExit",
		"pub": "npm run build && npm publish",
		"pretty-quick": "pretty-quick --stage",
		"pre-commit": "tsc && npm run lint --fix && npm run pretty-quick",
		"parcel": "rm -rf dist && tsc && parcel build",
		"build": "rm -rf dist && tsc",
		"single-test": "jest src/utils.test.ts",
		"link": "npm link && npm link firelordjs",
		"dev": "---------------------dev------------------------",
		"d-link": "npm run build && npm run link",
		"d-test": "tsc && npm test",
		"d-e-test": "npm run d-link && npm run e-tsc && npm run e-test",
		"d-p-test": "npm run p-reinstall && npm run p-test",
		"endToEnd": "-------------endToEnd-----------------------",
		"e-tsc": "tsc -p tsconfig.doc.json",
		"e-test": "jest --forceExit -c=jest.config.doc.js",
		"published": "-------------published test-----------------------",
		"p-reinstall": "npm --prefix codeForDoc run reinstall",
		"p-test": "npm --prefix codeForDoc test"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/tylim88/firelordjs.git"
	},
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/tylim88/firelordjs/issues"
	},
	"homepage": "https://firelordjs.com/",
	"keywords": [
		"firebase",
		"firestore",
		"wrapper",
		"typescript",
		"web",
		"scalable",
		"type-safe",
		"V9"
	],
	"devDependencies": {
		"@parcel/transformer-typescript-types": "^2.3.2",
		"@types/jest": "^27.0.2",
		"@types/lodash": "^4.14.180",
		"@typescript-eslint/eslint-plugin": "^5.0.0",
		"@typescript-eslint/parser": "^5.0.0",
		"betwin": "^1.1.3",
		"cross-env": "^7.0.3",
		"dotenv": "^16.0.0",
		"env-cmd": "^10.1.0",
		"eslint": "^7.32.0",
		"eslint-cli": "^1.1.1",
		"eslint-config-prettier": "^8.3.0",
		"eslint-import-resolver-typescript": "^2.5.0",
		"eslint-plugin-import": "^2.25.2",
		"eslint-plugin-prettier": "^4.0.0",
		"firebase": "^9.6.6",
		"husky": "^7.0.0",
		"jest": "^27.2.5",
		"jsdoc": "^3.6.5",
		"lodash": "^4.17.21",
		"parcel": "^2.3.2",
		"pick-random": "^3.0.0",
		"prettier": "^2.4.1",
		"pretty-quick": "^3.1.3",
		"ts-essentials": "^9.0.0",
		"ts-jest": "^27.0.5",
		"ts-node": "^10.4.0",
		"typescript": "^4.6.2"
	},
	"peerDependencies": {
		"firebase": "^9.6.6"
	}
}
